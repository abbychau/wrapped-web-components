{
  "name": "wrapped-web-components",
  "version": "0.2.0",
  "description": "A library that simplifies web component creation with plain HTML, JS, and CSS",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "docs/assets/wwc-logo.svg"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "echo \"Error: no test specified\" && exit 1",
    "serve": "http-server -o",
    "start": "npm run dev & npm run serve",
    "docs": "http-server ./docs -p 8888 -c-1 --cors -o",
    "docs:dev": "npm run dev & npm run docs",
    "docs:build": "rollup -c",
    "docs:update": "mkdir -p docs/dist && cp -r dist/* docs/dist/"
  },
  "keywords": [
    "web-components",
    "custom-elements",
    "html",
    "javascript",
    "css"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/abbychau/wrapped-web-components"
  },
  "homepage": "https://github.com/abbychau/wrapped-web-components#readme",
  "bugs": {
    "url": "https://github.com/abbychau/wrapped-web-components/issues"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "http-server": "^14.1.1",
    "rollup": "^4.40.2",
    "rollup-plugin-livereload": "^2.0.5"
  }
}
